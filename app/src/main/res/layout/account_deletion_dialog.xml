<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_dialog_bg">
    
    <TextView
        android:id="@+id/account_deletion_are_you_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_ru"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.DrinkKollect.Title.Large"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        />

    <TextView
        android:id="@+id/account_deletion_warning"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/deletion_warning_ru"
        android:textSize="16sp"
        android:textAppearance="@style/TextAppearance.DrinkKollect.Body.Medium"
        android:textColor="@color/dialogBodyText"
        android:layout_below="@id/account_deletion_are_you_sure"
        android:layout_alignStart="@id/account_deletion_are_you_sure"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/account_deletion_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/return_back_ru"
        android:layout_below="@id/account_deletion_warning"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        />

    <Button
        android:id="@+id/account_deletion_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_ru"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/buttonsAuth"
        app:strokeColor="@color/buttonsAuth"
        app:strokeWidth="1dp"
        android:layout_below="@id/account_deletion_warning"
        android:layout_toStartOf="@id/account_deletion_back"
        android:layout_alignTop="@id/account_deletion_back"
        android:layout_alignBottom="@id/account_deletion_back"
        android:layout_marginEnd="10dp"
        />

</RelativeLayout>